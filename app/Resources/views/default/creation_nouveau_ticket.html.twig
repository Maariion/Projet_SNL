{% extends 'base.html.twig' %}


{% block body %}

    <div class="row"  style="padding: 2%">
        <nav class="left-align-align" style="background-color: #039be5">
            <a class="center">
                <ul class="waves-effect">
                    <li class="Clients" style="padding-right:100px; padding-left: 100px">
                        <a style="font-size: x-large" href="{{ path('client')}}">Voir vos tickets</a>
                    </li>
                </ul>
            </a>
        </nav>
    </div>

    <header style="font-size: x-large" class="centered">
        Créer un ticket
    </header>
    <br/>

    <div class="row">
        <div class="input-field col s12">
            <select>
                <option value="" disabled selected>Choisir une option</option>
                <option value="1">LIMS</option>
                <option value="2">ELN</option>
                <option value="3">Autres</option>
            </select>
            <label>Solution</label>
        </div>
        <div class="input-field col s12">
            <select>
                <option value="" disabled selected>Choisir une option</option>
                <option value="1">Bloquante</option>
                <option value="2">Haute</option>
                <option value="3">Moyenne</option>
                <option value="4">Basse</option>
            </select>
            <label>Criticité</label>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s12">
            <input id="last_name" type="text" class="validate">
            <label for="Titre">Titre</label>
        </div>
    </div>
    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="Description" class="materialize-textarea"></textarea>
                    <label for="Description">Description</label>
                </div>
            </div>
        </form>
    </div>
    <form action="#">
        <div class="file-field input-field">
            <div class="btn">
                <span>Fichiers</span>
                <input type="file" multiple>
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text" placeholder="Mettre ici une ou plusieurs pièce jointe">
            </div>
        </div>
    </form>
    <div class="center-align">
    <button class="btn waves-effect waves-light" type="submit" name="enregistrer" >Envoyer
        <i class="material-icons right">send</i>
    </button>
    </div>
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
    $(document).ready(function() {
    $('select').material_select();
    });
    </script>
{% endblock %}
{% endblock %}


