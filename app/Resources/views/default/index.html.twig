<!DOCTYPE html>
<html>
<head>
    <title>SoftNLabs</title>
    <meta name = "viewport" content = "width = device-width, initial-scale = 1">
    {% block stylesheet %}
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel = "stylesheet"
              href = "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/css/materialize.min.css">
    {% endblock %}

</head>

<body class="#bdbdbd grey lighten-1">

<div class="row">
    <div class="col s6">
        <div class="card blue-grey darken-1">
            <div class="card-action">
                <div class="center-align">
                    <a href="{{ path('softnlabs_client_part')}}">Accès à la partie SNL</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col s6">
        <div class="card blue-grey darken-1">
            <div class="card-action">
                <div class="center-align">
                    <a href="{{ path('client')}}">Accès à la partie client</a>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
</div>


<div class = "card-panel">
    <div class="row">
        <div class="center-align">
            <img src="{{asset('images/logo_snl.png')}}" alt="Logo SoftNLabs" width="150">
        </div>
    </div>
    <div class="row">
        <form class="col s12" action="{{ path('login_check') }}">
            <div class="row">
                <div class="input-field col s3">
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input id="icon_prefix" type="text" class="validate">
                    <label for="icon_prefix"><font size="4">Adresse e-mail</font></label>
                </div>
                <div class="input-field col s3">
                </div>
            </div>
            <div class="row">
                <div class="input-field col s3">
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">vpn_key</i>
                    <input id="vpn_key" type="password" class="validate">
                    <label for="vpn_key"><font size="4">Mot de passe</font></label>
                </div>
                <div class="input-field col s3">
                </div>
            </div>
            <div class="row">
                <div class="input-field col s3">
                </div>
                <div class="input-field col s6">
                    <div class="center-align">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Se connecter
                            <i class="material-icons right">arrow_forward</i>
                        </button>
                    </div>
                </div>
                <div class="input-field col s3">
                </div>
            </div>
        </form>
    </div>
</div>


{% block javascripts %}
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="{{asset('js/materialize.js')}}"></script>
{% endblock %}

</body>
</html>






