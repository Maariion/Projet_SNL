{% extends 'base.html.twig' %}


{% block body %}

    {# Bouton de retour à la page précédente#}
    <div class="row"  style="padding: 2%">
        <nav class="left-align-align" style="background-color: #039be5">
            <a class="center">
                <ul class="waves-effect">
                    <li class="Clients" style="padding-right:100px; padding-left: 100px">
                        <a style="font-size: x-large" href="{{ path('softnlabs_client_part')}}">Retour</a>
                    </li>
                </ul>
            </a>
        </nav>
    </div>


    {# Formulaire de création de nouvelle société #}
    <div class = "card-panel">

        <div class="row">
            <div class="left-align">
                <h2>Création d'une nouvelle société</h2>
            </div>
        </div>

        {{ form_start(form, {'attr': {'novalidate':'novalidate'}}) }}

        <div class="row">
            <div class="input-field col s3">
            </div>
            <div class="input-field col s6">
                <label for="appbundle_utilisateur_nom">Nom de la société</label>
                {{ form_widget(form.nom,{'attr':{'class':'validate'}}) }}
            </div>
            <div class="input-field col s3">
            </div>
        </div>


        <div class="row">
            <div class="input-field col s3">
            </div>
            <div class="input-field col s6">
                <label for="appbundle_utilisateur_prenom">Description</label>
                {{ form_widget(form.description,{'attr':{'class':'validate'}}) }}
            </div>
            <div class="input-field col s3">
            </div>
        </div>


        <div class="row">
        </div>


        {# Boutàon de validation du formulaire #}
        <div class="row">
            <div class="center-align">
                <button class="btn waves-effect waves-light" type="submit" name="action">Nouvelle société
                    <i class="material-icons right">account_circle</i>
                </button>
            </div>
        </div>

        {{ form_end(form) }}

    </div>

    {% block javascripts %}
        {{ parent() }}
        <script type="text/javascript">
            $(document).ready(function() {
                $('select').material_select();
                $(".dropdown-button").dropdown();
            });
        </script>
    {% endblock %}

{% endblock %}


